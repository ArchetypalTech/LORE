{
	"[cairo]": {
		"editor.defaultFormatter": "StarkWare.cairo1"
	},
	"[css]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[tailwindcss]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[html]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[javascript]": {
		"editor.defaultFormatter": "oxc.oxc-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "oxc.oxc-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"biome.enabled": true,
	// "biome.projects": [
	// 	{
	// 		"path": "packages/client",
	// 	},
	// 	{
	// 		"path": "packages/contracts",
	// 	}
	// ],
	"cairo1.enableLanguageServer": true,
	"cairo1.enableScarb": true,
	"cairo1.languageServerPath": "${userHome}/.asdf/installs/dojo/1.3.1/bin/dojo-language-server",
	"cairo1.preferScarbLanguageServer": false,
	"cairo1.scarbPath": "${userHome}/.asdf/installs/scarb/2.9.2/bin/scarb",
	"editor.codeActionsOnSave": {
		"source.organizeImports.biome": "explicit",
		"source.action.useSortedAttributes.biome": "explicit",
		"source.action.useSortedProperties.biome": "explicit"
	},
	"editor.formatOnSave": true,
	"editor.tabSize": 2,
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"npm.packageManager": "bun",
	"npm.scriptRunner": "bun",
	"oxc.configPath": "packages/client/.oxlintrc.json",
	"oxc.enable": true,
	"search.exclude": {
		"**/*.bin": true,
		"**/*.cube": true,
		"**/*.CUBE": true,
		"**/*.fbx": true,
		"**/*.glb": true,
		"**/*.gltf": true,
		"**/*.hdr": true,
		"**/*.jpg": true,
		"**/*.mp3": true,
		"**/*.png": true,
		"**/*.svg": true,
		"**/*.tga": true,
		"**/*.ttf": true,
		"**/*.typeface.json": true,
		"**/*.wav": true,
		"**/*.webm": true,
		"**/*.webp": true,
		"**/*.woff": true,
		"**/*.woff2": true
	},
	"typescript.tsdk": "node_modules/typescript/lib",
	"biome.experimental.rename": true,
	"biome.requireConfigFile": true,
	"biome.lsp.bin": "node_modules/@biomejs/biome/bin"
}
